@model LuxStore.EntityLayer.Entities.Books

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Delete Book</h3>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this book?</h5>
            <hr />
            <div class="row">
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Description):</strong> @Html.DisplayFor(model => model.Description)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Price):</strong> @Html.DisplayFor(model => model.Price) $</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Stock):</strong> @Html.DisplayFor(model => model.Stock)</p>
                </div>
                <div class="col-md-6">
                    <p><strong>@Html.DisplayNameFor(model => model.ISBN):</strong> @Html.DisplayFor(model => model.ISBN)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Category):</strong> @Html.DisplayFor(model => model.Category.Name)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Author):</strong> @Html.DisplayFor(model => model.Author.FirstName)</p>
                    <p><strong>@Html.DisplayNameFor(model => model.CreatedDate):</strong> @Html.DisplayFor(model => model.CreatedDate)</p>
                </div>
            </div>
            <hr />
            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
